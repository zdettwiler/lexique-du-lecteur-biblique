generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model LLB {
  strong     String       @id @unique
  lemma      String
  gloss      String
  freq       Int
  // vu         Boolean
  updatedAt  DateTime?    @default(now()) @updatedAt
  bibleword  Bible[]
  pegonduff  PegonDuff?
}

model PegonDuff {
  strong  String  @id @unique
  llbword LLB @relation(fields: [strong], references: [strong])
}

model Bible {
  id      Int     @id @unique @default(autoincrement())
  book    String
  chapter Int
  verse   Int
  word    String
  lemma   String
  llbword LLB @relation(fields: [strong], references: [strong])
  strong  String
}
